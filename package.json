{
  "name": "elysia-10x",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "bun build --target bun --minify-whitespace --minify-syntax --outfile server.js src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "prepare": "husky"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "better-auth": "^1.4.5",
    "drizzle-orm": "^0.45.0",
    "drizzle-typebox": "^0.3.3",
    "elysia": "latest",
    "elysia-http-status-code": "^1.0.9",
    "elysia-logger": "^0.5.2",
    "elysia-rate-limit": "^4.4.2",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.49.0"
  },
  "module": "src/index.js",
  "lint-staged": {
    "*.{ts,js,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
